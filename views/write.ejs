<html web-theme="<%=require.web_theme %>">
    <head>
        <title>
            Project Manager
        </title>
        <link rel="stylesheet" href="/css/bootstrap.css">
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">

        <!-- pdf -> image 로 변환해 주는 라이브러리 -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.2.228/pdf.min.js"></script>

        <!-- 태그 입력에 사용되는 라이브러리 -->
        <script src="/js/jquery.tagsinput.js"></script>

        <!-- 이미지 클릭시 모달창이 뜨는 라이브러리 -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>

        <!-- 구글 폰트 -->
        <link href="https://fonts.googleapis.com/css2?family=Londrina+Solid:wght@300&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Do+Hyeon&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap" rel="stylesheet">

        <!-- custom css -->
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/write.css">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/darkwhite.css">
        <link rel="stylesheet" href="/css/bootstrap-custom.css">
        <link rel="stylesheet" href="/css/jquery.tagsinput.css">
        <!-- ---------- -->

    </head>
    <body>
        <div id="header">
            <div class="container">
                <div class="header-title">
                    <a href="/">Pr<i class="fas fa-ghost"></i>ject Manager</a>
                </div>
                <div class="header-menu float-right">
                    <% if(!require.is_login){ %>
                        <a href="/login"><button type="button" class="btn btn-secondary">Login</button></a>
                    <% } else { %>
                        <a href="/logout"><button type="button" class="btn btn-secondary">Logout</button></a>
                    <% } %>
                </div>
            </div>
        </div>
        <div id="menu">
            <div class="container">
                <div class="dark-mode float-right">
                    <label class="switch">
                        <input type="checkbox" <%= require.check ? "checked" : "" %>>
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>  
        <Br><Br>
        <div id="content">
            <div class="container write-box">
                <div class="write-form">
                    <div class="row">
                        <div class="col-sm-10"></div>
                        <div class="col-sm-2">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked value="casper">
                            <label class="form-check-label" for="flexRadioDefault2">
                                캐스퍼 프로젝트
                            </label>
                            <Br>
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="personal">
                            <label class="form-check-label" for="flexRadioDefault1">
                                개인 프로젝트
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <input type="text" class="form-control write-form-input" placeholder="Enter title." name="title">
                        </div>
                        <div class="col-sm-4">
                            <input type="date" class="form-control write-form-input" name="date">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-7">
                            <input type="text" class="form-control write-form-input" placeholder="Enter subtitle." name="subtitle">
                        </div>
                        <div class="col-sm-3">
                            <input type="file" class="form-control write-form-input" name="file">
                        </div>
                        <div class="col-sm-2">
                            Total page: <input type="text" class="form-control write-form-input write-form-page" readonly name="total_page">
                        </div>
                    </div>
                    <div class="row section-field">
                        <div class="col-sm-3">
                            <h5><i class="fas fa-stream"></i> Section 1</h5>
                        </div>
                        <div class="col-sm-9">
                            <textarea class="write-form-textarea" placeholder="Input the section information." name="section_content"></textarea>
                            <div class="row">
                                <div class="col-sm-10">
                                    Set range of page.&nbsp;
                                    <input type="text" class="form-control write-form-input write-form-numbering" value="1" readonly>&nbsp;
                                    <i class="fas fa-minus"></i>&nbsp;
                                    <input type="number" class="form-control write-form-input write-form-numbering2" value="1" max="10">
                                </div>
                                <div class="col-sm-2">
                                    <button type="button" class="btn btn-success btn-plus btn-section-add"><i class="fas fa-plus"></i></button>
                                    <button type="button" class="btn btn-danger btn-minus btn-section-remove"><i class="fas fa-minus"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5><i class="fas fa-comment-dots"></i> My opinion</h5>
                        </div>
                        <div class="col-sm-9">
                            <textarea class="write-form-textarea" placeholder="Input your opinion about project." name="section_opinion"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8"></div>
                        <div class="col-sm-4">
                            <input name="tags" id="tags"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11"></div>
                        <div class="col-sm-1">
                            <button type="button" class="btn btn-success btn-submit">submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer">
            <div class="container">
                This project is <a href="https://github.com/CASPER-REPSAC/project-manager">open source.</a>
            </div>
        </div>

        <script src="/js/HTML.js"></script>
        <script src="/js/feature/writeForm.js"></script>
        <script src="/js/darkmode.js"></script>
        <script src="/js/write.js"></script>
        <script src="/js/feature/writeSubmit.js"></script>
        <script src="/js/feature/uploadFile.js"></script>
        <script src="/js/feature/pdfToImg.js"></script>
        <script src="/js/uploadEvent.js"></script>
        <script>
            $('#tags').tagsInput();
        </script>
    </body>
</html>