<html web-theme="<%=require.web_theme %>">
    <head>
        <title>
            Project Manager
        </title>
        <%- include("./fragment/head.ejs") %>

        <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/> -->
        <!-- custom css -->
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/darkwhite.css">
        <link rel="stylesheet" href="/css/bootstrap-custom.css">
        <link rel="stylesheet" href="/css/profile.css">
        <!-- ---------- -->

        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500&display=swap" rel="stylesheet">
    </head>
    <body>
        <input type="hidden" name="user_id" value="<%=user_id %>">
        <%- include("./fragment/header.ejs") %>
        <div id="contents">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-lg-8">
                        <div class="row">
                            <div class="col-sm-3">
                                <a class="nav-link" href="#">Summary</a>
                            </div>
                            <div class="col-sm-3">
                                <a class="nav-link" href="#">All Projects</a>
                            </div>
                            <div class="col-sm-3">
                                <a class="nav-link" href="#">All Comments</a>
                            </div>
                            <div class="col-sm-3">
                                <a class="nav-link" href="#">Popular Projects</a>
                            </div>
                        </div>
                        <hr>
                        <div class="row menu-result-project">

                        </div>
                        <div class="row menu-result-comment">

                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="profile-box">
                            <div class="row">
                                <div class="col-md-8 profile-info d-flex align-items-center">
                                    <h5><%=writer %></h5>
                                </div>
                            </div>
                            <div class="row profile-total">
                                <div class="col-sm-4">
                                    <h3><%=total.like %></h3>
                                    <span class="info">Like</span>
                                </div>
                                <div class="col-sm-4">
                                    <h3><%=total.project %></h3>
                                    <span class="info">Projects</span>
                                </div>
                                <div class="col-sm-4">
                                    <h3><%=total.comment %></h3>
                                    <span class="info">Comments</span>
                                </div>
                            </div>
                            <div class="row profile-badge">
                                <div class="col-md-12">
                                    <% for(let i=0; i<tags.length; i++) { %>
                                        <a href="#" class="badge badge-pill badge-secondary"><%=tags[i] %></a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include("./fragment/footer.ejs") %>
        <script src="/js/HTML.js"></script>
        <script src="/js/api/profile.js"></script>
    </body>
</html>